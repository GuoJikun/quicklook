{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "quicklook",
  "version": "0.4.0",
  "identifier": "dev.jikun.quicklook",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:6688",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build-only"
  },
  "app": {
    "windows": [
      {
        "title": "quicklook",
        "width": 800,
        "height": 600,
        "resizable": true,
        "label": "main",
        "visible": false
      }
    ],
    "security": {
      "csp": {
        "img-src": "'self' asset: http://asset.localhost blob: data:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "**"
          ],
          "deny": []
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "shortDescription": "Windows 平台的文件预览工具",
    "createUpdaterArtifacts": true,
    "targets": [
      "msi",
      "nsis"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "digestAlgorithm": "sha256",
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "installMode": "both",
        "installerIcon": "icons/icon.ico"
      }
    }
  },
  "plugins": {
    "updater": {
      "createUpdaterArtifacts": true,
      "dangerousInsecureTransportProtocol": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNEMEM3QzA1RjJCRkY1ODYKUldTRzliL3lCWHdNUGRpVGU1a3YzbWE1WlB0RVR3UU10eGZBME10dTkrbDg3QkNpSVdrOGMyQTcK",
      "endpoints": [
        "https://github.com/GuoJikun/quicklook/releases/latest/download/latest.json"
      ]
    }
  }
}